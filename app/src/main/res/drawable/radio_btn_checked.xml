<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="3dp">

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            android:useLevel="false">
            <stroke
                android:color="@color/white"
                android:width="2dp"/>
            <size
                android:width="20dp"
                android:height="20dp"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:top="4dp"
        android:left="4dp"
        android:right="4dp"
        >
        <shape
            android:shape="rectangle"
            android:useLevel="false">
            <stroke
                android:color="@color/white"
                android:width="6dp"/>
            <size
                android:width="10dp"
                android:height="10dp"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>
</layer-list>